<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4F4F4F"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:text="Welcome to ChatApp"
            android:id="@+id/title"
            android:textSize="36dp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/fav"
            android:layout_centerInParent="true"
            android:layout_marginTop="120dp"
            android:layout_below="@+id/title"
            android:id="@+id/logo"/>

        <TextView
            android:layout_width="300dp"
            android:layout_marginTop="90dp"
            android:layout_height="wrap_content"
            android:text="Read our Privacy Policy. Tap 'Agree and Continue' to accept the Terms of Service."
            android:textColor="@android:color/white"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:id="@+id/tands"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/phone_login_button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/loginbutton"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Agree and Continue"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/tands"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A Hipstermartin production"
            android:id="@+id/prod"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:textStyle="italic"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

    </RelativeLayout>
</RelativeLayout>